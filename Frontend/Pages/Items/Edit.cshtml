@page
@model Frontend.Pages.ItemPages.EditModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>ShopItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ShopItem.Id" />
            <div class="form-group">
                <label asp-for="ShopItem.Name" class="control-label"></label>
                <input asp-for="ShopItem.Name" class="form-control" />
                <span asp-validation-for="ShopItem.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShopItem.Description" class="control-label"></label>
                <input asp-for="ShopItem.Description" class="form-control" />
                <span asp-validation-for="ShopItem.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShopItem.Price" class="control-label"></label>
                <input asp-for="ShopItem.Price" class="form-control" />
                <span asp-validation-for="ShopItem.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <img class="img-thumbnail" src="@Model.ShopItem.Image" width="100" height="100" />
                <input asp-for="FileManager.FormFile" type="file">
                <span asp-validation-for="FileManager.FormFile"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShopItem.CategoryId" class="control-label"></label>
                <select asp-for="ShopItem.CategoryId" class="form-control" asp-items="ViewBag.CategoryName"></select>
                <span asp-validation-for="ShopItem.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Items">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
